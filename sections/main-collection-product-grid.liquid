    {{ 'mask-arch.svg' | inline_asset_content }}
  {%- endif -%}
</div>
{%- endif -%}

{%- comment -%}
  ================================================================
  LOAD MORE JAVASCRIPT
  Fetches the next page and appends product cards to the grid.
  ADA compliant with screen reader announcements.
  ================================================================
{%- endcomment -%}
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const loadMoreBtn = document.getElementById('load-more-btn');
    const loadingSpinner = document.getElementById('loading-spinner');
    const loadMoreWrapper = document.getElementById('load-more-wrapper');
    const productGrid = document.getElementById('product-grid');

    if (!loadMoreBtn || !productGrid) return;

    loadMoreBtn.addEventListener('click', handleLoadMore);

    function handleLoadMore(e) {
      e.preventDefault();

      // Disable button and show spinner
      loadMoreBtn.disabled = true;
      loadMoreBtn.setAttribute('aria-busy', 'true');
      loadingSpinner.style.display = 'inline-block';

      const nextUrl = loadMoreBtn.dataset.nextUrl;

      fetch(nextUrl)
        .then(function (response) {
          return response.text();
        })
        .then(function (html) {
          const parser = new DOMParser();
          const doc = parser.parseFromString(html, 'text/html');

          // Get new product list items from the fetched page
          const newItems = doc.querySelectorAll('#product-grid > li');

          if (newItems.length > 0) {
            newItems.forEach(function (item, index) {
              const cloned = item.cloneNode(true);

              // Add fade-in animation class
              cloned.classList.add('load-more-fade-in');

              // Stagger the animation slightly for each product
              cloned.style.animationDelay = (index * 0.05) + 's';

              // Make sure reveal animations show immediately
              cloned.style.opacity = '1';
              cloned.style.transform = 'translateY(0px)';
              cloned.classList.remove('scroll-trigger');

              productGrid.appendChild(cloned);
            });

            announceToScreenReader(newItems.length + ' new products loaded');
          }

          // Check if there's another page to load
          const newLoadMoreBtn = doc.querySelector('#load-more-btn');
          if (newLoadMoreBtn && newLoadMoreBtn.dataset.nextUrl) {
            loadMoreBtn.dataset.nextUrl = newLoadMoreBtn.dataset.nextUrl;
            loadMoreBtn.disabled = false;
            loadMoreBtn.setAttribute('aria-busy', 'false');
            loadingSpinner.style.display = 'none';
          } else {
            // No more pages â€” hide the button
            loadMoreWrapper.style.display = 'none';
            loadingSpinner.style.display = 'none';
          }
        })
        .catch(function (error) {
          console.error('Load more error:', error);
          loadMoreBtn.disabled = false;
          loadMoreBtn.setAttribute('aria-busy', 'false');
          loadingSpinner.style.display = 'none';
        });
    }

    function announceToScreenReader(message) {
      var announcer = document.getElementById('load-more-announcer');
      if (!announcer) {
        announcer = document.createElement('div');
        announcer.id = 'load-more-announcer';
        announcer.className = 'load-more-sr-only';
        announcer.setAttribute('role', 'status');
        announcer.setAttribute('aria-live', 'polite');
        document.body.appendChild(announcer);
      }
      announcer.textContent = '';
      setTimeout(function () {
        announcer.textContent = message;
      }, 100);
    }
  });
</script>

