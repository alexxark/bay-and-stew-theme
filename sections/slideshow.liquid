<script>
  (function () {
    const sectionEl = document.getElementById('shopify-section-{{ section.id }}');
    if (!sectionEl) return;

    const slideshow = sectionEl.querySelector('slideshow-component');
    const pauseOnVideo = slideshow && slideshow.dataset.pauseOnVideo === 'true';

    function restoreFocus(dialog) {
      const openerId = dialog.getAttribute('data-opener-id');
      if (!openerId) return;
      const opener = document.getElementById(openerId);
      if (opener) {
        opener.setAttribute('aria-expanded', 'false');
        opener.focus();
      }
      dialog.removeAttribute('data-opener-id');
    }

    function openDialog(openBtn, dialog) {
      if (!dialog) return;
      openBtn.setAttribute('aria-expanded', 'true');
      if (!openBtn.id) {
        openBtn.id = 'promo-open-' + Math.random().toString(36).slice(2, 10);
      }
      dialog.setAttribute('data-opener-id', openBtn.id);
      if (typeof dialog.showModal === 'function') {
        dialog.showModal();
        const closeBtn = dialog.querySelector('[data-promo-close]');
        if (closeBtn) {
          closeBtn.focus();
        } else {
          dialog.focus();
        }
      }
    }

    function closeDialog(dialog) {
      if (!dialog || typeof dialog.close !== 'function') return;
      dialog.close();
      restoreFocus(dialog);
    }

    sectionEl.addEventListener('click', function (e) {
      const openBtn = e.target.closest('[data-promo-open]');
      if (openBtn) {
        e.preventDefault();
        const id = openBtn.getAttribute('data-promo-open');
        const dlg = document.getElementById(id);
        openDialog(openBtn, dlg);
        return;
      }

      const closeBtn = e.target.closest('[data-promo-close]');
      if (closeBtn) {
        e.preventDefault();
        const id = closeBtn.getAttribute('data-promo-close');
        const dlg = document.getElementById(id);
        closeDialog(dlg);
        return;
      }

      if (e.target && e.target.tagName === 'DIALOG') {
        closeDialog(e.target);
      }
    });

    sectionEl.addEventListener('click', function (e) {
      const unmuteBtn = e.target.closest('[data-slideshow-unmute]');
      const muteBtn = e.target.closest('[data-slideshow-mute]');
      if (!unmuteBtn && !muteBtn) return;

      const slide = (unmuteBtn || muteBtn).closest('.slideshow__slide');
      if (!slide) return;

      const videos = slide.querySelectorAll('video');
      if (!videos.length) return;

      const shouldMute = !!muteBtn;
      videos.forEach((video) => {
        video.muted = shouldMute;
        if (!shouldMute) {
          video.volume = 1;
        }
      });

      const unmuteButton = slide.querySelector('[data-slideshow-unmute]');
      const muteButton = slide.querySelector('[data-slideshow-mute]');
      if (unmuteButton) unmuteButton.hidden = !shouldMute;
      if (muteButton) muteButton.hidden = shouldMute;
    });

    if (slideshow && pauseOnVideo) {
      const handleSlide = (slide) => {
        if (!slide || typeof slideshow.pause !== 'function' || typeof slideshow.play !== 'function') return;
        const hasVideo = !!slide.querySelector('video');
        if (hasVideo) {
          slideshow.pause();
        } else if (slideshow.autoplayButtonIsSetToPlay !== false) {
          slideshow.play();
        }
      };

      slideshow.addEventListener('slideChanged', function (event) {
        handleSlide(event.detail && event.detail.currentElement);
      });

      const initialSlide = sectionEl.querySelector('.slideshow__slide');
      handleSlide(initialSlide);
    }

    const nextButton = sectionEl.querySelector('[data-next-section]');
    if (nextButton) {
      nextButton.addEventListener('click', function () {
        const nextSection = sectionEl.nextElementSibling;
        if (nextSection) {
          nextSection.scrollIntoView({ behavior: 'smooth' });
        }
      });
    }
  })();
</script>

