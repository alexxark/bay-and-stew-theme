{{ 'section-image-banner.css' | asset_url | stylesheet_tag }}
{{ 'component-slider.css' | asset_url | stylesheet_tag }}
{{ 'component-slideshow.css' | asset_url | stylesheet_tag }}

{%- if section.settings.slide_height == 'adapt_image' and section.blocks.first.settings.image != blank -%}
  {%- style -%}
    @media screen and (max-width: 749px) {
      #Slider-{{ section.id }}::before,
      #Slider-{{ section.id }} .media::before,
      #Slider-{{ section.id }}:not(.banner--mobile-bottom) .banner__content::before {
        padding-bottom: {{ 1 | divided_by: section.blocks.first.settings.image.aspect_ratio | times: 100 }}%;
        content: '';
        display: block;
      }
    }

    @media screen and (min-width: 750px) {
      #Slider-{{ section.id }}::before,
      #Slider-{{ section.id }} .media::before {
        padding-bottom: {{ 1 | divided_by: section.blocks.first.settings.image.aspect_ratio | times: 100 }}%;
        content: '';
        display: block;
      }
    }
  {%- endstyle -%}
{%- endif -%}

<slideshow-component
  id="Slideshow-{{ section.id }}"
  class="slider-mobile-gutter{% if section.settings.layout == 'grid' %} page-width{% endif %}{% if section.settings.show_text_below %} mobile-text-below{% endif %}"
  role="region"
  aria-roledescription="{{ 'sections.slideshow.carousel' | t }}"
  aria-label="{{ section.settings.accessibility_info | escape }}"
  data-pause-on-video="{{ section.settings.autoplay_pause_on_video }}"
>
  {%- if section.settings.auto_rotate and section.blocks.size > 1 -%}
    <div class="slideshow__controls slideshow__controls--top slider-buttons{% if section.settings.show_text_below %} slideshow__controls--border-radius-mobile{% endif %}">
      <button
        type="button"
        class="slider-button slider-button--prev"
        name="previous"
        aria-label="{{ 'sections.slideshow.previous_slideshow' | t }}"
        aria-controls="Slider-{{ section.id }}"
      >
        <span class="svg-wrapper">
          {{- 'icon-caret.svg' | inline_asset_content -}}
        </span>
      </button>
      <div class="slider-counter slider-counter--{{ section.settings.slider_visual }}{% if section.settings.slider_visual == 'counter' or section.settings.slider_visual == 'numbers' %} caption{% endif %}">
        {%- if section.settings.slider_visual == 'counter' -%}
          <span class="slider-counter--current">1</span>
          <span aria-hidden="true"> / </span>
          <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
          <span class="slider-counter--total">{{ section.blocks.size }}</span>
        {%- else -%}
          <div class="slideshow__control-wrapper">
            {%- for block in section.blocks -%}
              <button
                class="slider-counter__link slider-counter__link--{{ section.settings.slider_visual }} link"
                aria-label="{{ 'sections.slideshow.load_slide' | t }} {{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
                aria-controls="Slider-{{ section.id }}"
              >
                {%- if section.settings.slider_visual == 'numbers' -%}
                  {{ forloop.index -}}
                {%- else -%}
                  <span class="dot"></span>
                {%- endif -%}
              </button>
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>
      <button
        type="button"
        class="slider-button slider-button--next"
        name="next"
        aria-label="{{ 'sections.slideshow.next_slideshow' | t }}"
        aria-controls="Slider-{{ section.id }}"
      >
        <span class="svg-wrapper">
          {{- 'icon-caret.svg' | inline_asset_content -}}
        </span>
      </button>

      {%- if section.settings.auto_rotate and section.settings.show_pause_toggle -%}
        <button
          type="button"
          class="slideshow__autoplay slider-button"
          aria-label="{{ 'sections.slideshow.pause_slideshow' | t }}"
        >
          <span class="svg-wrapper">
            {{- 'icon-pause.svg' | inline_asset_content -}}
          </span>
          <span class="svg-wrapper">
            {{- 'icon-play.svg' | inline_asset_content -}}
          </span>
        </button>
      {%- endif -%}
    </div>
  {%- endif -%}

  <div
    class="slideshow banner banner--{{ section.settings.slide_height }} grid grid--1-col slider slider--everywhere{% if section.settings.show_text_below %} banner--mobile-bottom{% endif %}{% if section.blocks.first.settings.image == blank and section.blocks.first.settings.video == blank %} slideshow--placeholder{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
    id="Slider-{{ section.id }}"
    aria-live="polite"
    aria-atomic="true"
    data-autoplay="{{ section.settings.auto_rotate }}"
    data-speed="{{ section.settings.change_slides_speed }}"
  >
    {%- for block in section.blocks -%}
      <style>
        #Slide-{{ section.id }}-{{ forloop.index }} .banner__media::after {
          opacity: {{ block.settings.image_overlay_opacity | divided_by: 100.0 }};
        }
      </style>
      <div
        class="slideshow__slide grid__item grid--1-col slider__slide"
        id="Slide-{{ section.id }}-{{ forloop.index }}"
        {{ block.shopify_attributes }}
        role="group"
        aria-roledescription="{{ 'sections.slideshow.slide' | t }}"
        aria-label="{{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
        tabindex="-1"
      >
        <div class="slideshow__media banner__media media{% if block.settings.image == blank and block.settings.video == blank %} placeholder{% endif %}{% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}">
          {%- if block.settings.video != blank -%}
            {%- assign loop_video = true -%}
            {%- if section.settings.auto_rotate -%}
              {%- assign loop_video = false -%}
            {%- endif -%}
            <div class="slideshow__video-wrapper">
              {%- if block.settings.mobile_video != blank -%}
                <div class="slideshow__media-video slideshow__media-video--desktop">
                  {{
                    block.settings.video
                    | video_tag:
                      image_size: '3840x',
                      autoplay: true,
                      loop: loop_video,
                      controls: false,
                      muted: true,
                      playsinline: true
                  }}
                </div>
                <div class="slideshow__media-video slideshow__media-video--mobile">
                  {{
                    block.settings.mobile_video
                    | video_tag:
                      image_size: '1600x',
                      autoplay: true,
                      loop: loop_video,
                      controls: false,
                      muted: true,
                      playsinline: true
                  }}
                </div>
              {%- else -%}
                {{
                  block.settings.video
                  | video_tag:
                    image_size: '3840x',
                    autoplay: true,
                    loop: loop_video,
                    controls: false,
                    muted: true,
                    playsinline: true
                }}
              {%- endif -%}
            </div>
          {%- elsif block.settings.image -%}
            {%- liquid
              assign height = block.settings.image.width | divided_by: block.settings.image.aspect_ratio | round
              if section.settings.image_behavior == 'ambient'
                assign sizes = '120vw'
                assign widths = '450, 660, 900, 1320, 1800, 2136, 2400, 3600, 7680'
              else
                assign sizes = '100vw'
                assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
              endif
              assign fetch_priority = 'auto'
              if section.index == 1
                assign fetch_priority = 'high'
              endif
            -%}
            {%- if block.settings.image_mobile != blank -%}
              <div class="slideshow__media-image slideshow__media-image--desktop">
                {%- if forloop.first -%}
                  {{
                    block.settings.image
                    | image_url: width: 3840
                    | image_tag: height: height, sizes: sizes, widths: widths, fetchpriority: fetch_priority
                  }}
                {%- else -%}
                  {{
                    block.settings.image
                    | image_url: width: 3840
                    | image_tag: loading: 'lazy', height: height, sizes: sizes, widths: widths
                  }}
                {%- endif -%}
              </div>
              <div class="slideshow__media-image slideshow__media-image--mobile">
                {{
                  block.settings.image_mobile
                  | image_url: width: 1100
                  | image_tag: loading: 'lazy', sizes: '100vw', widths: '375, 550, 750, 1100'
                }}
              </div>
            {%- else -%}
              {%- if forloop.first -%}
                {{
                  block.settings.image
                  | image_url: width: 3840
                  | image_tag: height: height, sizes: sizes, widths: widths, fetchpriority: fetch_priority
                }}
              {%- else -%}
                {{
                  block.settings.image
                  | image_url: width: 3840
                  | image_tag: loading: 'lazy', height: height, sizes: sizes, widths: widths
                }}
              {%- endif -%}
            {%- endif -%}
          {%- else -%}
            {%- assign placeholder_slide = forloop.index | modulo: 2 -%}
            {%- if placeholder_slide == 1 -%}
              {{ 'hero-apparel-2' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- else -%}
              {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}
          {%- endif -%}
        </div>

        {%- liquid
          assign processed_heading = block.settings.heading
          if processed_heading != blank
            assign processed_heading = processed_heading | replace: '[[', '<span class="slideshow__heading-highlight">' | replace: ']]', '</span>'
            if block.settings.highlight_words != blank
              assign highlight_words = block.settings.highlight_words | split: ','
              for word in highlight_words
                assign cleaned_word = word | strip
                if cleaned_word != ''
                  capture highlight_replacement
                    echo '<span class="slideshow__heading-highlight">'
                    echo cleaned_word
                    echo '</span>'
                  endcapture
                  assign processed_heading = processed_heading | replace: cleaned_word, highlight_replacement
                endif
              endfor
            endif
          endif
        -%}

        <div class="slideshow__text-wrapper banner__content banner__content--{{ block.settings.box_align }} page-width{% if block.settings.show_text_box == false %} banner--desktop-transparent{% endif %}{% if settings.animations_reveal_on_scroll and forloop.index == 1 %} scroll-trigger animate--slide-in{% endif %}">
          <div
            class="slideshow__text banner__box content-container content-container--full-width-mobile color-{{ block.settings.color_scheme }} gradient slideshow__text--{{ block.settings.text_alignment }} slideshow__text-mobile--{{ block.settings.text_alignment_mobile }}"
            style="--slideshow-gap-subheading: {{ block.settings.gap_after_subheading }}px; --slideshow-gap-title: {{ block.settings.gap_after_title }}px; --slideshow-gap-before-buttons: {{ block.settings.gap_before_buttons }}px; --slideshow-mobile-gap-before-subheading: {{ block.settings.mobile_gap_before_subheading }}px; --slideshow-gap-after-promo: {{ block.settings.gap_after_promo_note }}px;"
          >
            {%- if processed_heading != blank -%}
              <h2 class="banner__heading inline-richtext {{ block.settings.heading_size }}">
                {{ processed_heading }}
              </h2>
            {%- endif -%}

            {%- if block.settings.subheading != blank -%}
              <div class="banner__text rte slideshow__subheading">
                <p>{{ block.settings.subheading }}</p>
              </div>
            {%- endif -%}

            {%- if block.settings.promo_note != blank -%}
              {%- assign promo_dialog_id = 'promo-details-' | append: section.id | append: '-' | append: block.id -%}
              <p class="slideshow__promo-note">
                {{ block.settings.promo_note }}
                {%- if block.settings.promo_details_text != blank -%}
                  <button
                    type="button"
                    class="slideshow__promo-note-link"
                    data-promo-open="{{ promo_dialog_id }}"
                    aria-haspopup="dialog"
                    aria-controls="{{ promo_dialog_id }}"
                    aria-expanded="false"
                  >
                    {{ block.settings.promo_link_label | default: 'details' }}
                  </button>
                {%- endif -%}
              </p>

              {%- if block.settings.promo_details_text != blank -%}
                {%- assign promo_dialog_title_id = promo_dialog_id | append: '-title' -%}
                <dialog
                  id="{{ promo_dialog_id }}"
                  class="slideshow__promo-dialog"
                  aria-labelledby="{{ promo_dialog_title_id }}"
                  aria-describedby="{{ promo_dialog_id }}-content"
                  aria-modal="true"
                >
                  <div class="slideshow__promo-dialog-inner">
                    <button
                      type="button"
                      class="slideshow__promo-dialog-close"
                      data-promo-close="{{ promo_dialog_id }}"
                      aria-label="Close"
                    >
                      x
                    </button>
                    <div class="slideshow__promo-dialog-content" id="{{ promo_dialog_id }}-content">
                      <h2 id="{{ promo_dialog_title_id }}" class="visually-hidden">Promotion details</h2>
                      {{ block.settings.promo_details_text | escape | newline_to_br }}
                    </div>
                  </div>
                </dialog>
              {%- endif -%}
            {%- endif -%}

            {%- assign primary_label = block.settings.button_label -%}
            {%- assign primary_link = block.settings.link -%}
            {%- assign secondary_label = block.settings.button_label_2 -%}
            {%- assign secondary_link = block.settings.link_2 -%}

            {%- if primary_label != blank or secondary_label != blank -%}
              <div class="banner__buttons">
                {%- if primary_label != blank -%}
                  <a
                    {% if primary_link %}
                      href="{{ primary_link }}"
                    {% else %}
                      role="link" aria-disabled="true"
                    {% endif %}
                    class="button {% if block.settings.button_style_secondary %}button--secondary{% else %}button--primary{% endif %}"
                  >
                    {{- primary_label | escape -}}
                  </a>
                {%- endif -%}

                {%- if secondary_label != blank -%}
                  <a
                    {% if secondary_link %}
                      href="{{ secondary_link }}"
                    {% else %}
                      role="link" aria-disabled="true"
                    {% endif %}
                    class="button {% if block.settings.button_style_secondary_2 %}button--secondary{% else %}button--primary{% endif %}"
                  >
                    {{- secondary_label | escape -}}
                  </a>
                {%- endif -%}
              </div>
            {%- endif -%}
          </div>
        </div>

        {%- if block.settings.video != blank and block.settings.allow_sound -%}
          <div class="slideshow__volume-control">
            <button type="button" class="slideshow__volume-button" data-slideshow-unmute>
              <span class="visually-hidden">{{ 'general.accessibility.unmute_video' | t }}</span>
              Unmute
            </button>
            <button type="button" class="slideshow__volume-button" data-slideshow-mute hidden>
              <span class="visually-hidden">{{ 'general.accessibility.mute_video' | t }}</span>
              Mute
            </button>
          </div>
        {%- endif -%}
      </div>
    {%- endfor -%}
  </div>

  {%- if section.blocks.size > 1 and section.settings.auto_rotate == false -%}
    <div class="slideshow__controls slider-buttons{% if section.settings.show_text_below %} slideshow__controls--border-radius-mobile{% endif %}">
      <button
        type="button"
        class="slider-button slider-button--prev"
        name="previous"
        aria-label="{{ 'sections.slideshow.previous_slideshow' | t }}"
        aria-controls="Slider-{{ section.id }}"
      >
        <span class="svg-wrapper">
          {{- 'icon-caret.svg' | inline_asset_content -}}
        </span>
      </button>
      <div class="slider-counter slider-counter--{{ section.settings.slider_visual }}{% if section.settings.slider_visual == 'counter' or section.settings.slider_visual == 'numbers' %} caption{% endif %}">
        {%- if section.settings.slider_visual == 'counter' -%}
          <span class="slider-counter--current">1</span>
          <span aria-hidden="true"> / </span>
          <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
          <span class="slider-counter--total">{{ section.blocks.size }}</span>
        {%- else -%}
          <div class="slideshow__control-wrapper">
            {%- for block in section.blocks -%}
              <button
                class="slider-counter__link slider-counter__link--{{ section.settings.slider_visual }} link"
                aria-label="{{ 'sections.slideshow.load_slide' | t }} {{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
                aria-controls="Slider-{{ section.id }}"
              >
                {%- if section.settings.slider_visual == 'numbers' -%}
                  {{ forloop.index -}}
                {%- else -%}
                  <span class="dot"></span>
                {%- endif -%}
              </button>
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>
      <button
        type="button"
        class="slider-button slider-button--next"
        name="next"
        aria-label="{{ 'sections.slideshow.next_slideshow' | t }}"
        aria-controls="Slider-{{ section.id }}"
      >
        <span class="svg-wrapper">
          {{- 'icon-caret.svg' | inline_asset_content -}}
        </span>
      </button>
    </div>
  {%- endif -%}

  {%- if section.settings.show_next_section_button -%}
    <button type="button" class="slideshow__next-section-button" data-next-section>
      <span class="visually-hidden">{{ 'general.accessibility.navigate_to_next_section' | t }}</span>
      {{- 'icon-caret.svg' | inline_asset_content -}}
    </button>
  {%- endif -%}
</slideshow-component>

{%- if request.design_mode -%}
  <script src="{{ 'theme-editor.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

<style>
  #shopify-section-{{ section.id }} .slideshow__subheading {
    margin-top: var(--slideshow-mobile-gap-before-subheading, 0px);
    margin-bottom: var(--slideshow-gap-subheading, 10px);
  }

  #shopify-section-{{ section.id }} .slideshow__text .banner__heading {
    margin-top: 0;
    margin-bottom: var(--slideshow-gap-title, 18px);
  }

  #shopify-section-{{ section.id }} .slideshow__text .banner__buttons {
    margin-top: var(--slideshow-gap-before-buttons, 0px);
  }

  #shopify-section-{{ section.id }} .slideshow__promo-note {
    margin-top: 0;
    margin-bottom: var(--slideshow-gap-after-promo, 12px);
    font-size: 12px;
    line-height: 1.3;
    opacity: 0.85;
  }

  #shopify-section-{{ section.id }} .slideshow__promo-note-link {
    background: none;
    border: 0;
    padding: 0;
    margin-left: 4px;
    text-decoration: underline;
    cursor: pointer;
    font: inherit;
    opacity: 0.95;
  }

  #shopify-section-{{ section.id }} .slideshow__promo-dialog {
    border: 0;
    padding: 0;
    max-width: 560px;
    width: calc(100% - 32px);
    border-radius: 14px;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    max-height: calc(100vh - 32px);
  }

  #shopify-section-{{ section.id }} .slideshow__promo-dialog::backdrop {
    background: rgba(0, 0, 0, 0.55);
  }

  #shopify-section-{{ section.id }} .slideshow__promo-dialog-inner {
    position: relative;
    padding: 18px 18px 16px;
    max-height: calc(100vh - 64px);
    overflow: auto;
  }

  #shopify-section-{{ section.id }} .slideshow__promo-dialog-close {
    position: absolute;
    top: 10px;
    right: 12px;
    background: none;
    border: 0;
    font-size: 18px;
    line-height: 1;
    cursor: pointer;
    opacity: 0.8;
  }

  #shopify-section-{{ section.id }} .slideshow__promo-dialog-content {
    font-size: 14px;
    line-height: 1.5;
    white-space: normal;
  }

  #shopify-section-{{ section.id }} .slideshow__heading-highlight {
    color: currentColor;
    text-decoration: underline;
  }

  #shopify-section-{{ section.id }} .slideshow__volume-control {
    position: absolute;
    right: 16px;
    bottom: 16px;
    z-index: 2;
  }

  #shopify-section-{{ section.id }} .slideshow__volume-button {
    background: rgba(0, 0, 0, 0.65);
    color: #ffffff;
    border: 0;
    border-radius: 999px;
    padding: 6px 12px;
    font-size: 12px;
    cursor: pointer;
  }

  #shopify-section-{{ section.id }} .slideshow__media-video {
    height: 100%;
  }

  #shopify-section-{{ section.id }} .slideshow__media video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  #shopify-section-{{ section.id }} .slideshow__media-image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
  }

  #shopify-section-{{ section.id }} .slideshow__media-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  #shopify-section-{{ section.id }} .slideshow__media-video--mobile {
    display: none;
  }

  #shopify-section-{{ section.id }} .slideshow__media-image--mobile {
    display: none !important;
  }

  #shopify-section-{{ section.id }} .slideshow__next-section-button {
    position: absolute;
    left: 50%;
    bottom: 16px;
    transform: translateX(-50%);
    background: rgba(0, 0, 0, 0.7);
    color: #ffffff;
    border: 0;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    cursor: pointer;
    z-index: 2;
  }

  #shopify-section-{{ section.id }} slideshow-component {
    position: relative;
  }

  #shopify-section-{{ section.id }} .slideshow__controls {
    position: absolute;
    right: 16px;
    bottom: 16px;
    z-index: 3;
    width: auto;
    border: 0;
    border-radius: 999px;
    padding: 0 6px;
    background: rgba(0, 0, 0, 0.6);
    color: #ffffff;
  }

  #shopify-section-{{ section.id }} .slideshow__controls--top {
    order: 0;
  }

  #shopify-section-{{ section.id }} .slideshow__controls .slider-button,
  #shopify-section-{{ section.id }} .slideshow__controls .slider-counter {
    color: #ffffff;
  }

  #shopify-section-{{ section.id }} .slideshow__controls .slider-counter__link--dots .dot {
    border-color: rgba(255, 255, 255, 0.8);
  }

  #shopify-section-{{ section.id }} .slideshow__controls .slider-counter__link--active.slider-counter__link--dots .dot {
    background-color: #ffffff;
    border-color: #ffffff;
  }

  @media screen and (max-width: 749px) {
    #shopify-section-{{ section.id }} .slideshow__controls {
      right: 12px;
      bottom: 12px;
    }
  }

  @media screen and (max-width: 749px) {
    #Slider-{{ section.id }}::before,
    #Slider-{{ section.id }} .media::before,
    #Slider-{{ section.id }}:not(.banner--mobile-bottom) .banner__content::before {
      content: none !important;
      display: none !important;
      padding-bottom: 0 !important;
    }

    #shopify-section-{{ section.id }} .slideshow.banner--mobile-bottom {
      height: auto;
    }

    #shopify-section-{{ section.id }} .slideshow__media {
      height: auto;
      overflow: visible;
    }

    #shopify-section-{{ section.id }} .slideshow.banner--small .banner__media,
    #shopify-section-{{ section.id }} .slideshow.banner--medium .banner__media,
    #shopify-section-{{ section.id }} .slideshow.banner--large .banner__media {
      height: auto;
    }

    #shopify-section-{{ section.id }} .slideshow.banner--mobile-bottom .banner__media {
      position: relative;
      height: auto !important;
    }

    #shopify-section-{{ section.id }} .slideshow.banner--mobile-bottom .banner__content {
      min-height: 0;
    }

    #shopify-section-{{ section.id }} .slideshow:not(.banner--mobile-bottom) .banner__media {
      position: relative !important;
      height: auto !important;
    }

    #shopify-section-{{ section.id }} .slideshow:not(.banner--mobile-bottom) .banner__content {
      position: absolute;
      inset: 0;
      min-height: 0 !important;
      z-index: 2;
    }

    #shopify-section-{{ section.id }} .slideshow__media-image {
      position: static;
      inset: auto;
      height: auto;
    }

    #shopify-section-{{ section.id }} .slideshow__media-image--mobile {
      position: relative !important;
      top: auto !important;
      left: auto !important;
